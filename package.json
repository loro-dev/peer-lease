{
  "name": "@loro-dev/peer-lease",
  "version": "2.0.0",
  "description": "TypeScript library for safely reusing CRDT peer IDs without collisions.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:browser": "vitest run --environment happy-dom",
    "coverage": "vitest run --coverage",
    "lint": "oxlint --type-aware",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "check": "pnpm typecheck && pnpm lint && pnpm test -u",
    "prepublishOnly": "pnpm build && pnpm check"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loro-dev/peer-lease.git"
  },
  "bugs": {
    "url": "https://github.com/loro-dev/peer-lease/issues"
  },
  "homepage": "https://github.com/loro-dev/peer-lease#readme",
  "license": "MIT",
  "peerDependencies": {
    "loro-crdt": "^1.8.0"
  },
  "devDependencies": {
    "@types/node": "^22.18.6",
    "@vitest/coverage-v8": "^2.1.9",
    "happy-dom": "^18.0.1",
    "oxlint": "^1.16.0",
    "oxlint-tsgolint": "^0.2.0",
    "tsdown": "^0.15.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
